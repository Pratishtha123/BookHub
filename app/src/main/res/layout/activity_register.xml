<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Details"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/etRegName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Name"
        android:drawableStart="@drawable/custom_name_icon"
        android:drawablePadding="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="@drawable/custom_input"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:inputType="text"
        android:layout_below="@id/txtRegister"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:id="@+id/etRegEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Email Address"
        android:background="@drawable/custom_input"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawablePadding="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:inputType="textEmailAddress"
        android:layout_below="@id/etRegName"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Mobile Number"
        android:drawableStart="@drawable/custom_phone"
        android:drawablePadding="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:maxLength="10"
        android:background="@drawable/custom_input"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@id/etRegEmail"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Address"
        android:background="@drawable/custom_input"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:drawableStart="@drawable/custom_add"
        android:drawablePadding="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:inputType="text"
        android:layout_below="@id/etPhone"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_view"
        android:layout_below="@id/etAddress"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"/>

</RelativeLayout>